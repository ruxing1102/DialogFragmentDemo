<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_show_dialog_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="基本对话框"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_show_dialog_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="自定义对话框一"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_show_dialog_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="自定义对话框二(设置显示位置)"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_show_dialog_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="自定义对话框三(设置动画效果)"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_show_dialog_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="自定义对话框四(设置监听)"
        android:textSize="20sp" />

</LinearLayout>
